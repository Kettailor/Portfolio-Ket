    <section class="max-w-6xl mx-auto px-4 py-16 grid md:grid-cols-2 gap-10 items-center">
        <div>
            <h1 class="text-4xl font-extrabold tracking-tight">Xin chào, mình là <span class="text-blue-600">
                    <%= site.name %>
                </span></h1>
            <p class="mt-4 text-lg text-gray-700">
                <%= site.role %>
            </p>
            <p class="mt-4 text-gray-600">
                <%= site.description %>
            </p>
            <div class="mt-6">
                <a href="/projects" class="inline-block bg-blue-600 text-white px-5 py-3 rounded-xl">Xem dự án</a>
                <a href="/contact" class="inline-block ml-3 border px-5 py-3 rounded-xl">Liên hệ</a>
            </div>
        </div>
        <div class="justify-self-center">
            <img src="/images/avatar.jpg" alt="Avatar" class="w-56 h-56 rounded-full object-cover shadow" />
        </div>
    </section>


    <section class="max-w-6xl mx-auto px-4 pb-16">
        <h2 class="text-2xl font-bold mb-6">Dự án nổi bật</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% projects.forEach(p=> { %>
                <article class="border rounded-2xl overflow-hidden bg-white">
                    <% if (p.image) { %>
                        <img src="<%= p.image %>" alt="<%= p.title %>" class="h-40 w-full object-cover" />
                        <% } %>
                            <div class="p-4">
                                <h3 class="font-semibold text-lg">
                                    <%= p.title %>
                                </h3>
                                <p class="text-sm text-gray-600 mt-1">
                                    <%= p.summary %>
                                </p>
                                <div class="mt-3 flex flex-wrap gap-2">
                                    <% p.tags.forEach(t=> { %>
                                        <span class="text-xs bg-gray-100 px-2 py-1 rounded">
                                            <%= t %>
                                        </span>
                                        <% }) %>
                                </div>
                                <a href="<%= p.link %>" target="_blank"
                                    class="mt-4 inline-block text-blue-600 underline">Xem chi tiết</a>
                            </div>
                </article>
                <% }) %>
        </div>
    </section>